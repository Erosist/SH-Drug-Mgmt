# 示例环境变量文件（请复制为 backend/.env 并填写真实值）
# 不要将真实的 .env 文件提交到仓库

# Flask / 应用配置
FLASK_ENV=development
SECRET_KEY=change_this_dev_secret
DATABASE_URL=sqlite:///instance/data.db
JWT_SECRET_KEY=change_this_jwt_secret

# 高德地图 API（前端 JS 用于加载地图）
AMAP_WEB_KEY=your_amap_web_key_here

# 高德 REST API（后端调用）
AMAP_REST_KEY=your_amap_rest_key_here

# 高德 API 安全密钥（用于签名；通常只在后端使用）
AMAP_API_SECRET=your_amap_api_secret_here

# 邮件（如需）
MAIL_SERVER=smtp.example.com
MAIL_PORT=465
MAIL_USE_SSL=True
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password_or_app_token
MAIL_DEFAULT_SENDER=your_email@example.com

# 其它可选（示例）
#DATABASE_URL=postgresql://user:password@host:5432/dbname
#SENTRY_DSN=
#OTHER_SECRET=
